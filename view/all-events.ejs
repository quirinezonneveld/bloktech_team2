    <section>
      <h1>All events</h1>

      <div id="loader-filter"></div>

      <div class="filter-container">
        <form id="filter-form" onsubmit="handleSubmitFilter(event)">
          <!-- Datum invoerveld -->
          <input type="date" id="datum" name="datum" />

          <!-- Segment dropdown -->
          <select id="classificationName" name="classificationName">
            <option value="" disabled selected>Classification Name</option>
            <option value="Music">Music</option>
            <option value="Sports">Sports</option>
            <option value="Arts & Theatre">Arts & Theatre</option>
            <option value="Film">Film</option>
            <option value="Miscellaneous">Miscellaneous</option>
          </select>

          <select id="countryCode" name="countryCode">
            <option value="" disabled selected>Country</option>
            <option value="us">US</option>
            <option value="at">Austria</option>
            <option value="be">Belgium</option>
            <option value="de">Germany</option>
            <option value="nl">Netherlands</option>
          </select>
      
          <!-- Genre dropdown -->
          <select id="genre" name="genre">
            <option value="" disabled selected>Genre</option>
            <option value="action">Actie</option>
            <option value="comedy">Komedie</option>
            <option value="drama">Drama</option>
            <option value="horror">Horror</option>
            <option value="sci-fi">Science Fiction</option>
          </select>

          <!-- Regio dropdown -->
          <!-- <select id="regio" name="regio">
            <option value="" disabled selected>Regio</option>
            <option value="north">Noord</option>
            <option value="south">Zuid</option>
            <option value="east">Oost</option>
            <option value="west">West</option>
          </select> -->

          <!-- Prijs dropdown -->
          <select id="price" name="price">
            <option value="" disabled selected>Price</option>
            <option value="low">Low</option>
            <option value="medium">Medium</option>
            <option value="high">High</option>
          </select>

          <button id="submit-filter-button" type="submit">
            Verzenden
          </button>
        </form>
      </div>
    </section>

    <section class="assymetrical-container">
    <div>
      <h2>Populair</h2>
      <a href="/all-events">See all</a>
    </div>
    <ul id="card-container" class="card-container">
        <% if (events && events.length) { %>
            <% events.forEach(event => { %>
        <li>
          <article class="event-template">
            <img src="<%= event.images[0].url %>" alt="Event photo" data-src="event-img">
            <p><%= event.classifications[0].genre.name %></p>
            <button class="like-button" data-event-id="<%= event.id %>">
              <i class="fa-solid fa-heart"></i>
            </button>
            <a href="<%= event.url %>">
              <h5><%= event.name %></h5>
              <p><%= event.info %></p>
              <p><%= event.dates.start.dateTime %></p>
            </a>
          </article>
        </li>
        <% }) %>
        <% } else { %>
          <li>No events available.</li>
        <% } %>
    </ul>
    <ul class="card-buttons">
      <li>
        <button>
          <i class="fa-solid fa-arrow-left"></i>
        </button>
      </li>
      <li>
        <button>
          <i class="fa-solid fa-arrow-right"></i>
        </button>
      </li>
    </ul>
  </section>


