    </nav>
    <section>
    <h1>All events</h1>

    <div class="filterDiv">
        <form action="/submit" method="post">
            <!-- Datum invoerveld -->
            <input type="date" id="datum" name="datum">
    
            <!-- Segment dropdown -->
            <select id="segment" name="segment">
                <option value="" disabled selected>Segment</option>
                <option value="segment1">Segment 1</option>
                <option value="segment2">Segment 2</option>
                <option value="segment3">Segment 3</option>
            </select>
    
            <!-- Genre dropdown -->
            <select id="genre" name="genre">
                <option value="" disabled selected>Genre</option>
                <option value="action">Actie</option>
                <option value="comedy">Komedie</option>
                <option value="drama">Drama</option>
                <option value="horror">Horror</option>
                <option value="sci-fi">Science Fiction</option>
            </select>
    
            <!-- Regio dropdown -->
            <select id="regio" name="regio">
                <option value="" disabled selected>Regio</option>
                <option value="north">Noord</option>
                <option value="south">Zuid</option>
                <option value="east">Oost</option>
                <option value="west">West</option>
            </select>
    
            <!-- Prijs dropdown -->
            <select id="price" name="price">
                <option value="" disabled selected>Price</option>
                <option value="low">Low</option>
                <option value="medium">Medium</option>
                <option value="high">High</option>
            </select>
    
            <button type="submit">Verzenden</button>
        </form>
    </div>

    <ul class="card">
        <li>
            <article>
                <img src="assets/card-default.jpg" alt="Event photo">
                <p>Concert</p>
                <button>
                    <i class="fa-solid fa-heart"></i>
                </button>
                <a href="detail.ejs">
                    <h5>Naam artiest</h5>
                    <p>Informatie over event en artiest...</p>
                    <p>date</p>
                </a>
            </article>
        </li>
        </ul>

</section>
    
