<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav>
            <ul>    
                <li>
                    <a class="active" href="/home">
                        <img src="assets/test-logo.png" alt="Logo">
                        Naam
                    </a>
                </li>
                <li>
                    <input type="search" id="site-search" name="q" placeholder="Event, artist, date etc." maxlength="30" aria-label="Search through site content">
                    <button>Search</button>
                </li>
                    <li><a href="/all-events">All Events</a></li>
                    <li><a href="/about-us">About Us</a></li>
            </ul>
            <ul>
                <li><a href="/form">Sign In</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>

        <section class="header-homepage">
            <div>
                <h1>Find your event</h1>
                <p>Lorem ipsum dolor sit amet consectetur. Diam elit fermentum lorem leo dolor pellentesque faucibus aliquet.</p>
            </div>
            <div>
                <img src="assets/card-default.jpg" alt="Tickets animation">
            </div>
        </section>

    </header>

    <main>
        <section class="upcoming">
            <h2>Upcoming</h2>

            <a href="all-events.ejs">See all</a>
            <ul id="card-container" class="card-container">
            <% for (const event of events) { %>
                <li >
                    <article class="event-template">
                        <img src="<%= event.images[0].url %>" alt="Event photo" data-src="event-img">
                        <p>
                            <%= event.name %>
                        </p>
                        <button class="like-button" data-event-id="<%= event.id %>">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                        <a href="<%= event.url %>">
                            <h5 data-content="event-name">Naam artiest</h5>
                            <p>Informatie over event en artiest...</p>
                            <p><%= event.dates.start.dateTime %></p>
                        </a>
                    </article>
                </li>
            <% } %>
            </ul>
            
            <!-- card -->
 

        <ul>
				<li>
					<button>
						<img src="assets/card-arrow.gif" alt="Left Arrow: Click to slide left">
					</button>
				</li>
				<li>
					<button>
						<img src="assets/card-arrow.gif" alt="Right Arrow: Click to slide right">
					</button>
				</li>
			</ul>
        
        
        </section>


    </main>

    <footer></footer>


    <script src="./client.js"></script>
    
</body>
</html>
