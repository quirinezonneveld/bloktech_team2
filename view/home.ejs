<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">

</head>
<body>
    <header>
        <nav>
            <ul>    
                <li>
                    <a class="active" href="/home">
                        <img src="assets/test-logo.png" alt="Logo">
                        Naam
                    </a>
                </li>
                <li>
                    <input type="search" id="site-search" name="q" placeholder="Event, artist, date etc." maxlength="30" aria-label="Search through site content">
                    <button>Search</button>
                </li>
                    <li><a href="/all-events">All Events</a></li>
                    <li><a href="/about-us">About Us</a></li>
            </ul>
            <ul>
                <li><a href="/form">Sign In</a></li>
                <li><a href="/profile">Profile</a></li>
            </ul>
        </nav>

        <section class="header-homepage">
            <div>
                <h1>Find your event</h1>
                <p>Lorem ipsum dolor sit amet consectetur. Diam elit fermentum lorem leo dolor pellentesque faucibus aliquet.</p>
            </div>
            <div >
                <script type="module" src="https://unpkg.com/@splinetool/viewer@1.3.10/build/spline-viewer.js"></script>
    <spline-viewer url="https://prod.spline.design/Wo9y26Ief5BUnSyn/scene.splinecode"></spline-viewer>
            </div>
        </section>

    </header>

    <main>
        <section class="upcoming">
            <h2>Upcoming</h2>

            <a href="all-events.ejs">See all</a>
            <ul id="card-container" class="card-container">
            <% for (const event of events) { %>
                <li >
                    <article class="event-template">
                        <img src="<%= event.images[0].url %>" alt="Event photo" data-src="event-img">
                        <p>
                            <%= event.classifications[0].genre.name %>
                        </p>
                        <button class="like-button" data-event-id="<%= event.id %>">
                            <i class="fa-solid fa-heart"></i>
                        </button>
                        <a href="<%= event.url %>">
                            <h5><%= event.name %></h5>
                            <p><%= event.info %></p>
                            <p><%= event.dates.start.dateTime %></p>
                        </a>
                    </article>
                </li>
            <% } %>
            </ul>
            
            <!-- card -->
            <ul>
				<li>
					<button>
						<i class="fa-solid fa-arrow-left"></i>
					</button>
				</li>
				<li>
					<button>
						<i class="fa-solid fa-arrow-right"></i>
					</button>
				</li>
			</ul>
        
        </section>

        <section>
            <iframe width="560" height="315" src="https://www.youtube.com/embed/w_DUDTnG76U" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>

            <p>"passievol quotje"</p>
        </section>


        <section class="upcoming">
            <div>
                <h2>Populair</h2>
                <a href="all-events.ejs">See all</a>
            </div>
        
            <ul class="card-container">
                <li>
                    <article>
                        <img src="assets/card-default.jpg" alt="Event photo">
                        <p>Concert</p>
                        <button>
                            <i class="fa-solid fa-heart"></i>
                        </button>
                        <a href="detail.ejs">
                            <h5>Naam artiest</h5>
                            <p>Informatie over event en artiest...</p>
                            <p>date</p>
                        </a>
                    </article>
                </li>
            </ul>

            <ul class="card-buttons">
				<li>
					<button>
						<i class="fa-solid fa-arrow-left"></i>
					</button>
				</li>
				<li>
					<button>
						<i class="fa-solid fa-arrow-right"></i>
					</button>
				</li>
			</ul>
        </section>
        <section class="slider">
            <ul>
                <li><img src="assets/slider-default.png" alt="Ticket"></li>
                <li><img src="assets/slider-default.png" alt="Ticket"></li>
                <li><img src="assets/slider-default.png" alt="Ticket"></li>
                <li><img src="assets/slider-default.png" alt="Ticket"></li>
                <li><img src="assets/slider-default.png" alt="Ticket"></li>
            </ul>
        <section>

        </section>

    </main>

    <footer></footer>


    <script src="./client.js"></script>
    
</body>
</html>
