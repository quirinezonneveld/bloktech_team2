<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>  
    <link href="style.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <nav class="container">
            <ul>    

                <li class="nav-home">
                    <a class="active" href="home">
                        <img src="assets/logo-ticket+2.png" alt="Logo">
                    </a>
                </li>
                <li class="nav-search-bar">
                    <form action="your-action-url" method="get">
                    <!-- de action moet worden aangepast -->

                        <input type="search" id="site-search" name="q" placeholder="Search: event, artist, date etc." maxlength="20" aria-label="Search through site content">
                        <button type="submit">
                            <i class="fa-solid fa-magnifying-glass"></i>
                        </button>
                    </form>                    
                </li>

            </ul>
            <section class="nav-block">
            <ul>
                <li class="nav-all-events"><a href="all-events">All Events</a></li>
                <li class="nav-about-us"><a href="about-us">About Us</a></li>
            </ul>
            <ul>
                <% if (!isLoggedIn) { %>
                    <li class="nav-sign-in"><a href="form">Sign In
                        <i class="fa-solid fa-arrow-right"></i>
                    </a></li>
                <% } %>
                
                <li class="nav-profile"><a href="profile">Profile
                    <% if (profileImage.startsWith('data:image')) { %>
                      <img src="<%= profileImage %>" alt="Profile picture">
                    <% } else { %>
                      <img src="assets/profile-default.jpg" alt="Default Profile picture">
                    <% } %>
                  </a></li>
            </ul>
            </section>
            <button class="hamburger" id="hamburger">
                <i class="fa-solid fa-arrow-right"></i>
            </button>
        </nav> 

    </header>
    <main>
        <h1>Updating data</h1>
        <!-- VERANDEREN VAN NAAM FORMULIER -->
        <h2>Change Name</h2>
        <form action="/update-name" method="POST">
            <label for="emailUpdate">Email: <span>*</span></label>
            <input type="email" id="emailUpdate" name="emailUpdate" required>

            <label for="fNameUpdate">New first name:</label>
            <input type="text" id="fNameUpdate" name="fNameUpdate">
        
            <label for="lNameUpdate">New last name:</label>
            <input type="text" id="lNameUpdate" name="lNameUpdate">

            <p><span>*</span> fields are required</p>

            <input type="submit" value="Update Name">
        </form>

        <!-- VERANDEREN VAN WACHTWOORD FORMULIER -->
        <h2>Change Password</h2>
        <form action="/update-password" method="POST">
            <label for="emailUpdatePw">Email: <span>*</span></label>
            <input type="email" id="emailUpdatePw" name="emailUpdate" required>

            <label for="oldPassword">Old Password: <span>*</span></label>
            <input type="password" id="oldPassword" name="oldPassword" required>
        
            <label for="newPassword">New Password: <span>*</span></label>
            <input type="password" id="newPassword" name="newPassword" required>
        
            <label for="confirmNewPassword">Confirm New Password: <span>*</span></label>
            <input type="password" id="confirmNewPassword" name="confirmNewPassword" required>

            <p><span>*</span> fields are required</p>   

            <input type="submit" value="Update Password">
        </form>
</main>
</body>
</html>